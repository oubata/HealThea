# ============================================
# HealThEA Production Environment Variables
# ============================================
# Copy this file to .env and fill in real values
# Used by docker-compose.prod.yml
# NEVER commit .env to version control

# --- Database ---
DB_USER=medusa
DB_PASSWORD=CHANGE_ME_strong_password_here
DB_NAME=healthea

# --- Public URLs ---
PUBLIC_SITE_URL=https://healthea.ca
PUBLIC_API_URL=https://api.healthea.ca

# --- Secrets (generate with: openssl rand -hex 32) ---
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
COOKIE_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32

# --- MeiliSearch (generate with: openssl rand -hex 16) ---
MEILI_MASTER_KEY=CHANGE_ME_generate_with_openssl_rand_hex_16

# --- Medusa Publishable API Key ---
# Get from Medusa admin after first startup:
# Settings > API Key Management > Publishable API Keys
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=

# --- Stripe (leave empty to disable) ---
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
